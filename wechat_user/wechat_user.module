function wechat_user_login_two() {

  $goto = $_GET['goto'];
  $error = $_GET['error'];
  $state = $_GET['state'];
  $type = $_GET['type'];

  $we_obj = wechat_api_init_wechatobj();
  $auth_url = $we_obj->getOauthRedirect(url('wechat/auth', array(
    'absolute' => TRUE,
    'query' => array('destination' => $goto, 'error' => $error)
  )), $state, $type);
